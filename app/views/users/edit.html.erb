<div class="footer_top"></div>
<div class="row">
	<div class="col-md-1"></div>
	<%= form_for(@user) do |f| %>
	<div class="col-md-5">
			<%= attachment_image_tag @user, :image, :fill, 500, 500, fallback: "/no_image.jpg", class: "show_image"%>
		<%= f.attachment_field :image %>
	</div>
	<div class="col-md-5">
		<div class="user_edit_box row">
			<div class="col-md-1"></div>
			<div class="col-md-10 margin_top">
				<div class="form-group">
					<label>紹介文</label>
					<%= f.text_area :user_text, class: "form-control", placeholder: "200文字以内" %>
				</div>
				<div class="form-group">
					<label>ニックネームまたはバンド名</label>
					<%= f.text_field :name, class: "form-control" %>
				</div>
				<div class="form-group">
					<label>メールアドレス</label>
					<%= f.text_field :email, class: "form-control"  %>
				</div>
				<div class="form-group">
					<label>facebook</label>
					<%= f.text_field :facebook, class: "form-control" %>
				</div>
				<div class="form-group">
					<label>twitter</label>
					<%= f.text_field :twitter, class: "form-control" %>
				</div>
				<div class="form-group">
					<label>instagram</label>
					<%= f.text_field :instagram, class: "form-control" %>
				</div>
				<div class="form-group">
					<label>You Tube</label>
					<%= f.text_field :youtube, class: "form-control" %>
				</div>
				<div class="form-group">
					<%= f.submit "編集完了", class: "btn btn-info" %>
				</div>
				<div class="form-group">
					<%= link_to "パスワード変更、退会", users_password_edit_path(params[:id]), class: "btn btn-danger" %>
				</div>
			</div>
			<div class="col-md-1"></div>
		</div>
	</div>
	<%end%>
	<div class="col-md-1"></div>
</div>