<div class="container-fluid">
  <div class="row">
  	<h2 class="center margin_top">ユーザー認証</h2>
	<div class="col-md-3"></div>

	<div class="col-md-6">
		<div class="row">
			<%= form_for(@user, url: users_active_update_path(@current_user.id) ) do |f| %>
				<h4 class="center">アカウント有効化を押してください。
				</h4>
				<%= f.hidden_field :active, value: true %>
		<div class="row">
			<div class="form-group">
				<div class="col-md-4"></div>
				<%= f.submit "アカウント有効化", class: "btn btn-info col-md-4 margin_top" %>
				<div class="col-md-4"></div>
			</div>
		</div>
			<%end%>
		</div>
	</div>

	<div class="col-md-3"></div>

  </div>
</div>