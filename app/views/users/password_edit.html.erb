<div class="container-fluid">
  <div class="row">
  	<h2 class="center margin_top">パスワード変更</h2>
	<div class="col-md-4"></div>

	<div class="col-md-4">
		<div class="row">
			<%= form_for(@user, url: users_password_path(@current_user.id) ) do |f| %>
			<div class="col-md-1"></div>
			<div class="col-md-10">
				<div class="form-group">
					<label>新しいパスワード</label>
					<%= f.password_field :password, class: "form-control"  %>
				</div>
				<div class="form-group">
					<label>新しいパスワード確認</label>
					<%= f.password_field :password_confirmation, class: "form-control"  %>
				</div>

			</div>
			<div class="col-md-1"></div>

			<div class="form-group row">
				<div class="col-md-4"></div>
				<%= f.submit "パスワード変更", class: "btn btn-info col-md-4 margin_top" %>
				<div class="col-md-4"></div>
			</div>
			<div class="form-group row">
				<div class="col-md-4"></div>
				<%= link_to "退会（ユーザー削除）", user_path(@current_user.id), method: :delete,"data-confirm" => "退会すると全てのデータが削除されますがよろしいですか？" ,class: "btn btn-danger col-md-4 margin_top" %>
				<div class="col-md-4"></div>
			</div>
			<%end%>
		</div>
	</div>

	<div class="col-md-4"></div>

  </div>
</div>