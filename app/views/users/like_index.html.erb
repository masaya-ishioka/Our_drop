<div class="row">
	<div class="col-md-12 col-sm-12 col-xs-12 row like_sound">
		<div class="col-md-1"></div>
		<div class="like_index_box col-md-10 col-sm-12 col-xs-12">
			<h2 class="like_index_a"><a>Sounds</a><a class="like_click1">Users</a></h2>
			<% @sounds.each do |sound| %>
				<div class="index_box">
				<%= link_to sound_path(sound.id) do %>
					<%= attachment_image_tag sound.user, :image, fallback: "/no_image.jpg", class: "like_image"%><br>
				<ul>
					<li><%= sound.title.truncate(10) %></li>
					<li>M <%= sound.tag1 %></li>
					<li>F <%= sound.tag2 %></li>
					<li>P <%= sound.tag3 %></li>
				</ul>
				<% end %>
				</div>
			<% end %>
		</div>
		<div class="col-md-1"></div>
	</div>

	<div class="col-md-12 col-sm-12 col-xs-12 row like_user">
		<div class="col-md-1"></div>
		<div class="like_index_box col-md-10 col-sm-12 col-xs-12">
			<h2 class="like_index_a"><a>Users</a><a class="like_click2">Sounds</a></h2>
			<% @users.each do |user| %>
				<div class="index_box">
				<%= link_to user_path(user.id) do %>
					<%= attachment_image_tag user, :image, fallback: "/no_image.jpg", class: "like_image"%><br>
					<ul>
						<li><%= user.name %></li>
					</ul>
				<% end %>
				</div>
			<% end %>
		</div>
		<div class="col-md-1"></div>
	</div>
</div>