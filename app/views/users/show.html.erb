<div class="row">
	<div class="col-md-1"></div>
	<div class="col-md-8"></div>
	<div class="col-md-2">
		<%= link_to "編集", edit_user_path(@current_user.id), class: "btn btn-info" %>
	</div>
	<div class="col-md-1"></div>
</div>
<div class="row">
	<div class="col-md-1"></div>
	<div class="col-md-5">
		<%= attachment_image_tag @user, :image, :fill, 500, 500, fallback: "/no_image.jpg", class: "show_image"%>
    </div>
	<div class="col-md-5 center">
		<h2>profile</h2>
		<%= @user.name %>
		<%= @user.user_text %>
		<%= @user.facebook %>
		<%= @user.twitter %>
		<%= @user.instagram %>
		<%= @user.youtube %>
		<% if LikeUser.find_by(my_id: @current_user.id, user_id: @user.id) %>
			<%= link_to "お気に入り解除", user_like_user_path(@user.id), method: :delete, class: "btn btn-default" %>
		<% else %>
			<%= link_to "お気に入り登録", user_like_users_path(@user.id), method: :post, class: "btn btn-info" %>
		<% end %>
	</div>
	<div class="col-md-1"></div>
</div>
<div class="row" style=" margin-top: 20px;">
	<div class="col-md-1"></div>
	<div class="col-md-10 show-back">
		<table class="table">
			<thead class="show_link">
				<tr>
					<td>タイトル</td>
					<td>メインタグ</td>
					<td>雰囲気</td>
					<td>ポイント</td>
					<td></td>
				</tr>
			</thead>
			<% @user.sounds.each do |sound| %>
			<tbody class="show_link">
				<tr>
						<td><%= link_to sound.title,sound_path(sound.id), class: "show_link" %></td>
						<td><%= sound.tag1 %></td>
						<td><%= sound.tag2 %></td>
						<td><%= sound.tag3 %></td>
						<td>
							<%= link_to "編集", edit_sound_path(sound.id), class: "btn btn-info" %>
						</td>
				</tr>
			</tbody>
			<% end %>
		</table>
	</div>
	<div class="col-md-1"></div>
</div>



