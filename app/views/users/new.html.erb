<div class="container-fluid">
  <div class="row">
  	<h2 class="center margin_top">新規登録</h2>
	<div class="col-md-4"></div>

	<div class="col-md-4">
		<div class="row">
			<%= form_for(@user) do |f| %>
			<div class="col-md-1"></div>
			<div class="col-md-10">
				<p style="color:red;">※は必須項目です</p>
				<div class="form-group">
					<label><span style="color:red;">※</span>ニックネームまたはバンド名</label>
					<%= f.text_field :name, class: "form-control" %>
				</div>

				<div class="form-group">
					<label><span style="color:red;">※</span>メールアドレス</label>
					<%= f.text_field :email, class: "form-control"  %>
				</div>

				<div class="form-group">
					<label><span style="color:red;">※</span>パスワード(半角6文字以上)</label>
					<%= f.password_field :password, class: "form-control"  %>
				</div>

				<div class="form-group">
					<label><span style="color:red;">※</span>パスワード（確認）</label>
					<%= f.password_field :password_confirmation, class: "form-control"  %>
				</div>
			</div>
			<div class="col-md-1"></div>

			<div class="form-group row">
				<div class="col-md-4"></div>
				<%= f.submit "新規登録", class: "btn btn-info col-md-4 margin_top" %>
				<div class="col-md-4"></div>
			</div>

			<%end%>
		</div>
	</div>

	<div class="col-md-4"></div>

  </div>
</div>
