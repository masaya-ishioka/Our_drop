  <div class="row">
  	<h2 class="center margin_top">新規登録</h2>
	<div class="col-md-3 col-sm-3"></div>

	<div class="col-md-6 col-sm-6 col-xs-12">
		<div class="row">
			<%= form_for(@user) do |f| %>
			<div class="col-md-1  col-sm-1 col-xs-1"></div>
			<div class="col-md-10 col-sm-10 col-xs-10">
				<p style="color:red;">※は必須項目です</p>
				<div class="form-group">
					<label><span style="color:red;">※</span>ニックネームまたはバンド名</label>
					<%= f.text_field :name, class: "form-control" %>
				</div>

				<div class="form-group">
					<label><span style="color:red;">※</span>メールアドレス</label>
					<%= f.text_field :email, class: "form-control"  %>
				</div>

				<div class="form-group">
					<label><span style="color:red;">※</span>パスワード</label>
					<%= f.password_field :password, placeholder: "半角６文字以上", class: "form-control"  %>
				</div>

				<div class="form-group">
					<label><span style="color:red;">※</span>パスワード（確認）</label>
					<%= f.password_field :password_confirmation, class: "form-control"  %>
				</div>
			</div>
			<div class="form-group">
				<%= f.submit "新規登録", class: "btn btn-info margin_top" %>
			</div>

			<%end%>
		</div>
	</div>

	<div class="col-md-3  col-sm-3"></div>

  </div>
