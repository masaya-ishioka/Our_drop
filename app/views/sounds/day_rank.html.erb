<div class="row search_top">
	<div class="col-md-3"></div>
			<div class="col-md-7">

				<%= form_with url: sounds_day_rank_path, method: :get, local: true do |f| %>
					<%= f.text_field :search, class: "search-control", placeholder: "曲名を入力してください"  %><br>
					<label class="margin_right">
						メインタグ
		  				<%= f.select :search1, ["男ボーカル", "女ボーカル", "混合ボーカル", "歌なし", "ボーカロイド"], :prompt => "選択してください" %>
	  				</label>
		  			<label class="margin_right">
		  				雰囲気
		  				<%= f.select :search2, ["明るい", "楽しい", "クール", "セクシィ", "優しい", "暗い", "怒り"], :prompt => "選択してください" %>
	  				</label>
		  			<label class="margin_right">
		  				ポイント
		  				<%= f.select :search3, ["ギターかっけぇ", "ベースかっけぇ", "ドラムかっけぇ", "キーボードかっけぇ", "管楽器かっけぇ", "イントロかっけぇ", "弾き語り"], :prompt => "選択してください" %>
	  				</label>
		  			<%= f.submit 'Search', name: nil, class: "btn btn-info" %>
				<% end %>
			</div>
	<div class="col-md-2"></div>
</div>
<div class="row">
	<div class="col-md-1"></div>
	<div class="col-md-10 like_index_box">
		<div class="col-md-12">
		<h2 style="font-family: Impact;">Daily Ranking</h2>
		<%= link_to "All", sounds_path, class: "btn btn-info" %>
		<%= link_to "Daily Ranking", sounds_day_rank_path, class: "btn btn-default" %>
		<%= link_to "Weekly Rankings", sounds_week_rank_path, class: "btn btn-info" %>
		<%= link_to "Monthly Ranking", sounds_month_rank_path, class: "btn btn-info" %>
		</div>
		<% @sound_ranking.each do |sound| %>
			<div class="index_box">
			<%= link_to sound_path(sound.id) do %>
				<%= attachment_image_tag sound.user, :image, fallback: "/no_image.jpg", class: "like_image"%><br>
				<ul>
					<li>Title: <%= sound.title.truncate(13) %></li>
					<li>M <%= sound.tag1 %></li>
					<li>F <%= sound.tag2 %></li>
					<li>P <%= sound.tag3 %></li>
				</ul>
			<% end %>
			</div>
		<%end%>
	</div>
	<div class="col-md-1"></div>
</div>