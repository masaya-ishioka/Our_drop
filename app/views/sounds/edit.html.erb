<div class="row">
	<div class="col-md-12 col-sm-12">
		<h1 class="center">曲編集</h1>
	</div>
	<div class="col-md-4 col-sm-4"></div>
	<div class="col-md-4 col-sm-4">
		<%= form_for(@sound, url: sound_path(@sound.id)) do |f| %>
			<div class="form-group">
				<label>タイトル</label><br>
				<%= f.text_field :title, class: "form-control"  %>
			</div>

			<div class="form-group">
				<label>drop-box共有用URL</label><br>
				<%= f.text_field :url, class: "form-control"  %>
			</div>

			<div class="form-group">
				<label>メインタグ
				<%= f.select :tag1, ["男ボーカル", "女ボーカル", "混合ボーカル", "歌なし", "ボーカロイド"], :prompt => "選択してください" %></label>
			</div>

			<div class="form-group">
				<label>雰囲気
				<%= f.select :tag2, ["明るい", "楽しい", "クール", "セクシィ", "優しい", "暗い", "怒り"], :prompt => "選択してください" %></label>
			</div>

			<div class="form-group">
				<label>ポイント
				<%= f.select :tag3, ["ギターかっけぇ", "ベースかっけぇ", "ドラムかっけぇ", "キーボードかっけぇ", "管楽器かっけぇ", "イントロかっけぇ", "弾き語り"], :prompt => "選択してください" %></label>
			</div>

			<div class="form-group">
				<label>曲紹介</label><br>
				<%= f.text_area :sound_text, class: "form-control", placeholder: "200文字以内" %>
			</div>

			<div class="form-group">
				<%= f.submit "編集完了", class: "btn btn-info margin_top"  %>
			</div>
			<div class="form-group">
				<%= link_to "削除", sound_path(@sound.id), method: :delete, class: "btn btn-danger"%>
			</div>
		<%end%>
	</div>
	<div class="col-md-4 col-sm-4"></div>
</div>