<div class="row">
	<div class="col-md-1"></div>
	<div class="col-md-5">
		<%= attachment_image_tag @sound.user, :image, fallback: "/no_image.jpg", class: "show_image"%>
	</div>

	<div class="col-md-5">
		<iframe width="500" height="150" src="<%= @sound.url %>"></iframe>
		<table class="table">
			<tr>
				<th>曲名</th>
				<td><%= @sound.title %></td>
			</tr>
			<tr>
				<th>アーティスト名</th>
				<td><%= link_to @sound.user.name, user_path(@sound.user_id) %></td>
			</tr>
			<tr>
				<th>メインタグ</th>
				<th>雰囲気</th>
				<th>ポイント</th>
			</tr>
			<tr>
				<td><%= @sound.tag1 %></td>
				<td><%= @sound.tag2 %></td>
				<td><%= @sound.tag3 %></td>
			</tr>
		</table>
		<div class="sound_text">
			<p style="padding: 10px;"><%= @sound.sound_text %></p>
		</div>
		<% if @current_user %>
			<% unless @sound.user_id == @current_user.id %>
				<% if LikeSound.find_by(user_id: @current_user.id, sound_id: @sound.id) %>
					<%= link_to "お気に入り解除", sound_like_sound_path(@sound.id), method: :delete, class: "btn btn-default" %>
				<% else %>
					<%= link_to "お気に入り登録", sound_like_sounds_path(@sound.id), method: :post, class: "btn btn-info" %>
				<% end %>
			<% end %>
		<% end %>
			<%=link_to "戻る", :back, class: "btn btn-default" %>
	</div>
	<div class="col-md-1"></div>
</div>

<div class="header_top"></div>

<div class="row">
	<div class="col-md-1"></div>
	<div class="col-md-6">
		<% @comments.each do |comment| %>
			<div class="row  user_edit_box margin">
				<div class="col-md-1"></div>
				<div class="col-md-3">
					<%= attachment_image_tag comment.user, :image, fallback: "/no_image.jpg", class: "comment_image margin"%><br>
					<%= link_to comment.user.name, user_path(comment.user.id), class: "margin" %>
				</div>
				<div class="col-md-6">
					<p class="margin"><%= comment.comment %></p>
				</div>
				<div class="col-md-1">
					<%if @current_user %>
						<% if comment.user_id == @current_user.id %>
							<%= link_to "削除", sound_comment_path(@sound.id, comment.id), method: :delete, class: "btn btn-danger comment_btn"%>
						<% end %>
					<% end %>
				</div>
				<div class="col-md-1"></div>
			</div>
		<% end %>
	</div>
	<% if @current_user %>
	<div class="col-md-3 user_edit_box margin">
		<%= form_for(@comment, url: sound_comments_path(@sound.id)) do |f| %>
		<div class="form-group margin">
			<%= f.text_area :comment, class: "form-control"  %>
		</div>
		<div class="form-group">
				<div class="col-md-4"></div>
				<%= f.submit "コメント", class: "btn btn-info col-md-4  margin"  %>
				<div class="col-md-4"></div>
			</div>
		<% end %>
	</div>
	<% else %>
	<div class="col-md-3"></div>
	<% end %>
	<div class="col-md-2"></div>
</div>
