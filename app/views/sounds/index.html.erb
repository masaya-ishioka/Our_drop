<div class="row">
			<div class="search_top col-md-12 col-sm-12 col-xs-12">
				<%= form_with url: sounds_path, method: :get, local: true do |f| %>
					<%= f.text_field :search, class: "search-control", placeholder: "曲名を入力してください"  %>
				<div class="search_top1">
					<label class="margin_right">
						メインタグ
		  				<%= f.select :search1, ["男ボーカル", "女ボーカル", "混合ボーカル", "歌なし", "ボーカロイド"], :prompt => "選択してください" %>
	  				</label>
		  			<label class="margin_right">
		  				雰囲気
		  				<%= f.select :search2, ["明るい", "楽しい", "クール", "セクシィ", "優しい", "暗い", "怒り"], :prompt => "選択してください" %>
	  				</label>
		  			<label class="margin_right">
		  				ポイント
		  				<%= f.select :search3, ["ギターかっけぇ", "ベースかっけぇ", "ドラムかっけぇ", "キーボードかっけぇ", "管楽器かっけぇ", "イントロかっけぇ", "弾き語り"], :prompt => "選択してください" %>
	  				</label>
	  			</div>
	  			<div class="search_top1">
		  			<%= f.submit 'Search', name: nil, class: "btn btn-info" %>
		  		</div>
				<% end %>
			</div>
</div>
<div class="row">
	<div class="col-md-1"></div>
	<div class="col-md-10 col-sm-12 col-xs-12 like_index_box">
		<div class="col-md-12 col-sm-12 col-xs-12">
		<h2 style="font-family: Impact;">Post List</h2>
		<%= link_to "Daily Rank", sounds_day_rank_path, class: "btn btn-info" %>
		<%= link_to "Weekly Rank", sounds_week_rank_path, class: "btn btn-info" %>
		<%= link_to "Monthly Rank", sounds_month_rank_path, class: "btn btn-info" %>
		</div>
		<% @sounds.each do |sound| %>
			<div class="index_box">
			<%= link_to sound_path(sound.id) do %>
				<%= attachment_image_tag sound.user, :image, fallback: "/no_image.jpg", class: "like_image"%><br>
				<ul>
					<li><%= sound.title.truncate(10) %></li>
					<li>M <%= sound.tag1 %></li>
					<li>F <%= sound.tag2 %></li>
					<li>P <%= sound.tag3 %></li>
				</ul>
			<% end %>
			</div>
		<%end%>
	</div>
	<div class="col-md-1"></div>
</div>