<!DOCTYPE html>
<html>
  <head>
    <title>ToyApp2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Corben:700 rel="stylesheet">
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
        <%= link_to root_path do %>
        <img src="/drop-logo.png" class="header_log" >
        <% end %>
      <% if @current_user %>
      <ul class="header">
        <li><%= link_to "曲一覧", sounds_path %></li>
        <li><%= link_to "曲投稿", new_sound_path %></li>
        <li><%= link_to "マイページ", user_path(@current_user.id) %></li>
        <li><%= link_to "ログアウト", users_logout_path, method: :post %></li>
      </ul>
      <% else %>
      <ul class="header">
        <li><%= link_to "曲一覧", sounds_path %></li>
        <li><%= link_to "ログイン", users_login_form_path %></li>
        <li><%= link_to "新規登録", new_user_path %></li>
      </ul>
      <% end %>
    </header>
    <div class="contents flash">
      <% flash.each do |message_type, message| %>
        <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
      <% end %>
    </div>
      <%= yield %>
    <footer>
      <small>COPYRIGHT &#169; Our drop ALL RIGHTS RESERVED.</small>
    </footer>
  </body>
</html>
